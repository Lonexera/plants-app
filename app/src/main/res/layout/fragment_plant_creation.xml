<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_creation_plant"
        android:layout_width="@dimen/plant_detail_image_size"
        android:layout_height="@dimen/plant_detail_image_size"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <EditText
        android:id="@+id/et_creation_plant_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/hint_plant_name"
        app:layout_constraintTop_toBottomOf="@id/iv_creation_plant"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <EditText
        android:id="@+id/et_creation_species_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/hint_species_name"
        app:layout_constraintTop_toBottomOf="@id/et_creation_plant_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_creation_watering_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_creation_species_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/et_creation_watering_frequency"/>

    <EditText
        android:id="@+id/et_creation_watering_frequency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tv_creation_watering_text"
        app:layout_constraintStart_toStartOf="@id/tv_creation_watering_text"
        app:layout_constraintEnd_toEndOf="@id/tv_creation_watering_units"/>

    <TextView
        android:id="@+id/tv_creation_watering_units"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tv_creation_watering_text"
        app:layout_constraintStart_toStartOf="@id/et_creation_watering_frequency"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>