<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_8dp"
    android:layout_marginTop="@dimen/margin_8dp"
    android:layout_marginBottom="@dimen/margin_8dp"
    android:layout_marginEnd="@dimen/margin_8dp"
    card_view:cardCornerRadius="@dimen/cardview_corner_radius_size">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_task_icon"
            android:layout_width="@dimen/task_icon_image_size"
            android:layout_height="@dimen/task_icon_image_size"
            android:layout_marginStart="@dimen/margin_16dp"
            app:layout_constraintTop_toTopOf="@id/btn_complete_task"
            app:layout_constraintBottom_toBottomOf="@id/btn_complete_task"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_task_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_normal"
            android:layout_marginStart="@dimen/margin_8dp"
            app:layout_constraintStart_toEndOf="@id/iv_task_icon"
            app:layout_constraintEnd_toStartOf="@id/btn_complete_task"
            card_view:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/btn_complete_task"
            app:layout_constraintBottom_toBottomOf="@id/btn_complete_task"/>

        <Button
            android:id="@+id/btn_complete_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_btn_complete"
            android:layout_marginEnd="@dimen/margin_8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>